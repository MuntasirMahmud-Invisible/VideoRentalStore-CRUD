@model VideoRentalApps.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "Customer Form";
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}
<body class="bg-color-bluecyan">
    <main id="main">
        <section id="breadcrumbs"  class="breadcrumbs bg-transparent">
            <div class="row">
                <div class="col-lg-12 d-flex flex-column justify-content-center pt-4 pt-lg-0 order-2 order-lg-1" data-aos="fade-up" data-aos-delay="200">

                    @*<h3>Customers</h3>*@

                    @*</div>*@
                    <div class="container">
                        <div>
                            <ol class="justify-content-sm-end">
                                <li><a href="@Url.Action("Index","Customers")">Customers</a></li>
                                <li>Customers Form</li>
                            </ol>
                        </div>
                        <div class="col-lg-6 " >
                            @using (Html.BeginForm("Save", "Customers"))
                            {
                                @Html.ValidationSummary(true, "Fix the following Errors")
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Customer.Name)
                                    @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Customer.Name)</span>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Customer.MembershipTypeId)
                                    @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select", new { @class = "form-control" })
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Customer.MembershipTypeId)</span>
</div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Customer.DateofBirth)
                                    @Html.TextBoxFor(m => m.Customer.DateofBirth, "{0: MM/ d/ yyyy }", new { @class = "form-control" })
                                    <span class="text-danger"> @Html.ValidationMessageFor(m => m.Customer.DateofBirth)</span>
</div>

                                <div class="mb-3 form-check">
                                    @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter)
                                    <label class="form-check-label">Subscribe to news letter</label>
                                </div>

                                @Html.HiddenFor(m => m.Customer.Id)
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success">SAVE</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
</section>
       
    </main>

@section scripts
{
            @Scripts.Render("~/bundles/jqueryval");
        }

</body>