@model VideoRentalApps.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "Movie Form";
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}

<body class="bg-color-bluecyan">
    <main id="main">
        <section id="breadcrumbs" class="breadcrumbs bg-transparent">
            <div class="row">
                <div class="col-lg-12 d-flex flex-column justify-content-center pt-4 pt-lg-0 order-2 order-lg-1" data-aos="fade-up" data-aos-delay="200">

                    @*<h3>Customers</h3>*@

                    @*</div>*@
                    <div class="container">
                        <div>
                            <ol class="justify-content-sm-end">
                                <li><a href="@Url.Action("Index","Movies")">Movies</a></li>
                                <li>Movies Form</li>
                            </ol>
                        </div>
                        <div class="col-lg-6 ">
                            @using (Html.BeginForm("Save", "Movies"))
                            {
                                @Html.ValidationSummary(true, "Fix the following errors")
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name)
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Name)</span>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ReleaseDate)
                                    @Html.TextBoxFor(m => m.ReleaseDate, "{0: MM/ d/ yyyy }", new { @class = "form-control" })
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.ReleaseDate)</span>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.GenreId)
                                    @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select", new { @class = "form-control" })
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.GenreId)</span>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.NumberInStock)
                                    @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.NumberInStock)</span>
                                </div>
                                @Html.HiddenFor(m => m.Id)
                                @Html.AntiForgeryToken()
                                <div>
                                    <button type="submit" class="btn btn-save btn-success">Save</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
       
    </main>
</body>
@section scripts
{
     @Scripts.Render("~/bundles/jqueryval")
 }
